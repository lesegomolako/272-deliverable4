
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link href="~/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div class="DIV"> 
        <h1>Sign Up</h1>
        <label>Name: </label><input type="text" /><label>Surname: </label><input type="text" />
        <br />
        <label>Username: </label><input type="text" /><label>Email: </label><input type="text" />
        <br />
        <label>Cellphone: </label><input type="text" /> <input type="checkbox" value="optional" />
        <br />
        <label>Password: </label><input type="text" />
        <br />
        <label>Confirm Password: </label><input type="text" />
        <br />
        @using (Html.BeginForm("Login", "Data"))
        {        
            <button type="submit">Sign Up</button>
        }
        <br />
        <a href="@Url.Action("Login", "Data")">Login</a>
    </div>
</body>
</html>
